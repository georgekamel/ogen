{{- /*gotype: github.com/ogen-go/ogen/gen.DefaultElem*/ -}}
{{- define "consts/set" -}}

{{ $t := $.Type }}

{{- if or $t.IsPrimitive $t.IsEnum -}}
	{{- template "consts/val" default_elem $t $.Var $.Default }}
	{{ $.Var }} = val
{{- else if $t.IsGeneric -}}{{ $val := $.Default }}
	{{- if $val.IsNil }}
		{{- if $t.GenericVariant.Nullable }}
		{{ $.Var }}.Null = true
		{{- end }}
	{{- else if $t.GenericOf.IsAlias -}}
		{{- template "consts/val" default_elem $t.GenericOf.AliasTo $.Var $.Default }}
		{{ $.Var }}.SetTo({{ $t.GenericOf.Go }}(val))
	{{- else }}
		{{- template "consts/val" default_elem $t.GenericOf $.Var $.Default }}
		{{ $.Var }}.SetTo(val)
	{{- end }}
{{- else if $t.IsAlias -}}
	{{- template "consts/val" default_elem $t.AliasTo $.Var $.Default }}
	{{ $.Var }} = {{ $t.Go }}(val)
{{- else if $t.IsPointer -}}
	{{- template "consts/val" default_elem $t.PointerTo $.Var $.Default }}
	{{ $.Var }} = &val
{{- else -}}
	{{ errorf "unsupported const %#v: %s" $.Default.Value $t }}
{{- end }}
{{- end -}}

{{- define "consts/val" -}}

{{ $t := $.Type }}{{ $j := $t.JSON }}{{- $val := print_go $.Default.Value }}
{{- if $j.TimeFormat }}
	val, _ := json.DecodeTimeFormat(jx.DecodeStr({{ quote $val }}), {{ $j.TimeFormat }})
{{- else if $j.Decoder }}
	val, _ := json.Decode{{ $j.Decoder }}(jx.DecodeStr({{ quote $val }}))
{{- else if $j.IsBase64 }}
	val, _ := jx.DecodeStr({{ quote $val }}).Base64()
{{- else if $t.IsPrimitive }}
	{{- if or $t.Primitive.IsString (eq $t.Go "bool") }}
		val := {{ $val }}
	{{- else }}
		val := {{ $t.Go }}({{ $val }})
	{{- end }}
{{- else }}
	val := {{ $t.Go }}({{ $val }})
{{- end }}

{{- end }}

